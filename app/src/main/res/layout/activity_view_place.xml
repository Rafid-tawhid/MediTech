<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewPlaceActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/backButton"
                android:onClick="goBack"
                android:clickable="true"
                android:layout_width="27dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/ic_back_arrow" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ic_sample_image" />

            <TextView
                android:id="@+id/placeName"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/openHour"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/textColor"
                android:max="5" />

            <Button
                android:id="@+id/showMapBtn"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_back"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show on google map"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/showDirection"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_back"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Direction"
                android:textAllCaps="false"/>
        </LinearLayout>
    </RelativeLayout>
</layout>